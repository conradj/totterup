{
        "version": "0.2.0",
        "configurations": [
            {
                "type": "node",
                "request": "launch",
                "name": "Meteor Server",
                "cwd": "${workspaceRoot}/",
                "runtimeExecutable": "${workspaceRoot}/.meteor/local/dev_bundle/bin/npm",
                "restart": true,
                "timeout": 100000,
                "stopOnEntry":false,
                "runtimeArgs": [
                    "run",
                    "dev-debug"
                ],
                "sourceMaps": true,
                "protocol": "inspector",
                "port": 5959
            }
        ]
    }